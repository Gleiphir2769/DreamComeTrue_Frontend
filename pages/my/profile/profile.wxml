<form bindsubmit="onUpdate">
  <view class="cu-form-group margin-top">
        <view class="title">真实姓名</view>
        <input value="{{userInfo.name}}" name="name" placeholder="请输入真实姓名"></input>
    </view>


    <view class="cu-form-group">
        <view class="title">性别</view>
        <picker name="sex"  value="{{userInfo.sex==='男'?0:1}}" range="{{sexPicker}}">
            <view class="picker">
                {{index ? picker[index] : userInfo.sex}}
            </view>
        </picker>
    </view>
    <view class="cu-form-group">
        <view class="title">出生日期</view>
        <picker name="birthDate" mode="date" value="{{userInfo.birthDate}}" start="1960-09-01" end="2030-09-01" bindchange="DateChange">
            <view class="picker">
                {{userInfo.birthDate}}
            </view>
        </picker>
    </view>
    <view class="cu-form-group">
        <view class="title">手机号码</view>
        <input value="{{userInfo.telephone}}" name="telephone" placeholder="输入手机号"></input>
        <view class="cu-capsule radius">
            <view class="cu-tag bg-blue">
                +86
            </view>
            <view class="cu-tag line-blue">
                中国大陆
            </view>
        </view>
    </view>


    <view class="cu-form-group">
        <view class="title">学历</view>
        <picker name="edcation"  value="{{index}}" range="{{educationPicker}}">
            <view class="picker">
                {{index ? picker[index] : '本科'}}
            </view>
        </picker>
    </view>
    <view class="cu-form-group margin-top">
        <textarea value="{{userInfo.specialty}}" name="specialty" maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="专业特长"></textarea>
    </view>
    <view class="padding-xl">
    <button form-type="submit"  class="cu-btn block bg-blue lg">更新</button>
</view>
</form>

<view class="alert" wx:if="{{alertVisible}}">
  <view class="alert-content">{{alertContent}}</view>
</view>