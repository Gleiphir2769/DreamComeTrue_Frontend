<form>
	<view class="cu-form-group margin-top">
		<view class="title">用户名</view>
		<input placeholder="以字母开头，由数字和字母组成"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">密码</view>
		<input placeholder="必须包含大小写字母和数字"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">电子邮箱</view>
		<input placeholder="请输入邮箱"></input>
	</view>

  <view class="cu-form-group margin-top">
		<view class="title">真实姓名</view>
		<input placeholder="请输入真实姓名"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">证件类型</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'身份证'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">证件号码</view>
		<input placeholder="请输入证件号码"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">性别</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'男'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">出生日期</view>
		<picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
			<view class="picker">
				{{date}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">手机号码</view>
		<input placeholder="输入手机号"></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-blue">
				+86
			</view>
			<view class="cu-tag line-blue">
				中国大陆
			</view>
		</view>
	</view>
  <view class="cu-form-group">
		<view class="title">服务区域</view>
		<picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
			<view class="picker">
				{{region[0]}}，{{region[1]}}，{{region[2]}}
			</view>
		</picker>
	</view>

	<view class="cu-form-group margin-top">
		<view class="title">展示志愿服务经历</view>
		<switch></switch>
	</view>
  <view class="cu-form-group">
		<view class="title">服务类别</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'法律服务'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">服务领域及行业</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'社区志愿者'}}
			</view>
		</picker>
	</view>
</form>
<view class="padding-xl">
  <button class="cu-btn block bg-blue lg">申请</button>
</view>