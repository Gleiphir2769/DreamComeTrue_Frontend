<form>
    <view class="cu-form-group margin-top text-right">
		<view class="title">负责人姓名</view>
		<input placeholder="请输入负责人姓名"></input>
	</view>
	<view class="cu-form-group text-right">
		<view class="title">负责人电话</view>
		<input type="number" placeholder="请输入负责人电话"></input>
	</view>
    <view class="cu-form-group text-right">
		<view class="title">负责人邮箱</view>
		<input placeholder="请输入负责人邮箱"></input>
	</view>
	<view class="cu-form-group margin-top">
		<view class="title">队伍名称</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'禁止换行，超出容器部分会以 ... 方式截断'}}
			</view>
		</picker>
	</view>
    <view class="cu-form-group">
		<view class="title">所属志愿中心</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'禁止换行，超出容器部分会以 ... 方式截断'}}
			</view>
		</picker>
	</view>
    <view class="cu-form-group text-right">
		<view class="title">项目名称</view>
		<input placeholder="请输入项目名称"></input>
	</view>
    <view class="cu-bar bg-white margin-top">
		<view class="action">
			项目logo上传
		</view>
		<view class="action">
			{{imgList.length}}/1
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>
	<view class="cu-form-group text-right">
		<view class="title">服务地点</view>
		<input placeholder="请输入服务地点"></input>
	</view>
	<view class="cu-form-group text-right">
		<view class="title">服务领域</view>
		<input placeholder="请输入服务领域"></input>
	</view>
    <view class="cu-form-group text-right">
		<view class="title">服务对象</view>
		<input placeholder="请输入服务对象"></input>
	</view>
</form>
<view class="padding-xl">
  <button class="cu-btn block bg-blue lg">发布</button>
</view>